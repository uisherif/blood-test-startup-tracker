{
  "name": "blood-test-startup-tracker",
  "version": "1.0.0",
  "description": "Dashboard to track metrics for top blood test startups",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd packages/api && npm run dev",
    "dev:web": "cd packages/web && npm run dev",
    "build": "npm run build:shared && npm run build:web",
    "build:vercel": "cd packages/shared && npm run build && cd ../web && npm run build",
    "build:shared": "cd packages/shared && npm run build",
    "build:api": "cd packages/api && npm run build",
    "build:web": "cd packages/web && npm run build"
  },
  "keywords": [
    "health-tech",
    "blood-test",
    "startup-tracker",
    "dashboard"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
