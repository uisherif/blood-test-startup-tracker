# API Keys for Data Sources
NEWS_API_KEY=your_newsapi_key_here
CRUNCHBASE_API_KEY=your_crunchbase_key_here

# Server Configuration
PORT=3001
NODE_ENV=production

# Security - Admin API Key
# Generate a secure random key: openssl rand -hex 32
# This key is required for all admin endpoints (approve/reject updates, trigger refresh)
ADMIN_API_KEY=your_secure_random_api_key_here

# CORS Configuration
# Comma-separated list of allowed frontend URLs
# Example: https://your-app.vercel.app,https://staging.your-app.com
FRONTEND_URL=https://your-app.vercel.app

# Optional: Database (if upgrading from JSON)
# DATABASE_URL=postgresql://user:password@host:5432/dbname
